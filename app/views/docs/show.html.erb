<div class="container-fluid docs-container">
  <div class="pfda-pane">
    <div class="pfda-pane-sidebar pfda-pane-sidebar-dark">
      <ul class="list-group">
        <li class="list-group-item list-group-item-header">
          Documentation
        </li>
        <% @sections.each do |section| %>
          <a href="<%= show_docs_path(section[:name]) %>" class="list-group-item <%= @active_section[:name] == section[:name] ? 'active' : '' %>">
            <%= section[:title] %>
          </a>
        <% end %>
      </ul>
    </div>
    <div class="pfda-pane-content pfda-pane-content-padded-xl">
      <%= render partial: "docs/#{@active_section[:name]}" %>
    </div>
  </div>
</div>
